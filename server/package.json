{
  "name": "automeal",
  "version": "1.0.0",
  "description": "Generate meals based on ingredients you already have",
  "main": "server.js",
  "scripts": {
    "i": "npm i && npm i ../client",
    "start": "node server",
    "server": "nodemon server",
    "client": "npm start ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install ../client && npm run build ../client",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/automeal/AutoMeal.git"
  },
  "author": "Daniel Segarra, Wei Lian, Savannah Nester, Victoria Simatupang, Roy Lema",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/automeal/AutoMeal/issues"
  },
  "homepage": "https://github.com/automeal/AutoMeal#readme",
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "roots": [
      "spec/javascript"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.1.5",
    "mongoose": "^6.5.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "unirest": "^0.6.0",
    "validator": "^10.11.0"
  }
}
